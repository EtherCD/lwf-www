.header
  display grid
  grid-template-columns 1fr 2fr
  background #ccc
  align-items center
  text-align center
  color #656565

.name
  align-items center
  justify-content center
  display flex
  font-size 24px
  font-weight 500
  padding 12px
  & > div
    &::first-letter
      color #0098FF

.links
  justify-content space-between
  align-items center
  display flex
  font-size 20px
  font-weight 400
  height 100%
  & > a
    justify-content center
    align-items center
    display flex
    flex 1
    color inherit
    text-decoration none
    height 100%
    for i in visited hover active focus
      &:{i}
        color inherit
        text-decoration none
        outline none

.active
  color #FFFFFE !important
  background #0098FF